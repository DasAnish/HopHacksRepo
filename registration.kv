<Label>
    font_size : 18
    color : (0,0,0,1)

<TextInput>
    background_normal: ''
    background_color: .95, .95, .95, 1

<Button>
    background_normal: ''
    background_color: .95, .95, .95, 1

# there are three screens
WindowManager:
    loginWindow:
    signupWindow:
    logDataWindow:

# GUI for the login window
<LoginWindow>:
    username : username
    pwd : pwd
    FloatLayout:
        size: root.width, root.height
        #GridLayout:
        #    pos_hint : {"x":0.05, "top": 1}
        #    cols : 2
        #Label:
        #    text: "TutorMatch"
        #    size_hint : 0.8, 0.2
        #    pos_hint : {"x" : 0.10, "top" : 0.95}
        #    font_size : "60sp"
        Image:
            source: "images/logo.png"
            pos_hint : {"x" : 0, "top" : 0.95}
            size_hint : 1.0, 0.3
        Label:
            text: 'Are you a Tutor?'
            size_hint : 0.4, 0.06
            pos_hint : {"x" : 0.25, "top" : 0.45}
        CheckBox:
            color : (0,0,0,1)
            size_hint : 0.06, 0.06
            pos_hint : {"x" : 0.65, "top" : 0.45}
            on_active: root.checkbox_click(self, self.active)
        Label:
            text : "Username: "
            size_hint : 0.1, 0.06
            pos_hint : {"x":0.20, "top":0.65}
        TextInput:
            id : username
            multiline :False
            size_hint : 0.4, 0.06
            pos_hint : {"x" : 0.45, "top" : 0.65}
        Label:
            text : "Password: "
            size_hint : 0.1, 0.06
            pos_hint : {"x" : 0.20, "top" : 0.55}
        TextInput:
            id : pwd
            password  : True
            multiline :False
            size_hint : 0.4, 0.06
            pos_hint : {"x" : 0.45, "top" : 0.55}
        Button:
            text : "Create an account"
            size_hint : 0.6, 0.06
            pos_hint : {"x" : 0.2, "top" : 0.2}
            on_release:
                app.root.current = 'signup'
                root.manager.transition.direction = "left"
        Button:
            text : "Login"
            size_hint : 0.6, 0.06
            pos_hint : {"x" : 0.2, "top" : 0.27}
            on_release:
                root.validate()
                root.manager.transition.direction = "up"

# GUI for the signup window
<SignupWindow>:
    username: username
    pwd : pwd
    phone : phone
    fname : fname
    lname : lname
    FloatLayout:
        GridLayout:
            pos_hint : {"x":0.05, "top": 0.68}
            cols : 2
            Label:
                text: 'Please tick this box if you are a tutor'
            CheckBox:
                color : (0,0,0,1)
                on_active: root.checkbox_click(self, self.active)
        Label:
            text : "USERNAME: "
            size_hint : 0.1, 0.06
            pos_hint : {"x":0.27, "top":0.9}
        TextInput:
            id : username
            multiline : False
            size_hint : 0.3, 0.06
            pos_hint : {"x" : 0.45, "top" : 0.9}

        Label:
            text : "PASSWORD: "
            size_hint : 0.1, 0.06
            pos_hint : {"x" : 0.27, "top" : 0.75}
        TextInput:
            id : pwd
            password  : True
            multiline : False
            size_hint : 0.3, 0.06
            pos_hint : {"x" : 0.45, "top" : 0.75}

        Label:
            text : "PHONE: "
            size_hint : 0.1, 0.06
            pos_hint : {"x" : 0.27, "top" : 0.6}
        TextInput:
            id : phone
            multiline : False
            size_hint : 0.3, 0.06
            pos_hint : {"x" : 0.45, "top" : 0.6}

        Label:
            text : "FIRST NAME: "
            size_hint : 0.1, 0.06
            pos_hint : {"x" : 0.27, "top" : 0.45}
        TextInput:
            id : fname
            multiline : False
            size_hint : 0.3, 0.06
            pos_hint : {"x" : 0.45, "top" : 0.45}

        Label:
            text : "LAST NAME: "
            size_hint : 0.1, 0.06
            pos_hint : {"x" : 0.27, "top" : 0.3}
        TextInput:
            id : lname
            multiline : False
            size_hint : 0.3, 0.06
            pos_hint : {"x" : 0.45, "top" : 0.3}

        Button:
            text : "SUBMIT"
            size_hint : 0.2, 0.1
            pos_hint : {"x" : 0.4, "top" : 0.12}
            on_release :
                root.signup()
                root.manager.transition.direction = "up"

        Button:
            text : "X"
            bold : True
            size_hint : 0.07, 0.07
            pos_hint : {"x" : 0.9, "top" : 0.96}
            color : (1,0,0,1)
            font_size : 30
            on_release:
                root.clearup()
                root.manager.transition.direction = "right"

# GUI to show validation result
<LogDataWindow>:
    info : info
    FloatLayout:
        Label:
            id : info
            size_hint : 0.8, 0.2
            pos_hint : {"x" : 0.15, "top" : 0.8}
            text : "SUCCESSFULLY LOGGED IN"



# GUI for pop up window
<P>:
    Label:
        text : "Please enter valid information"
        size_hint : 0.2, 0.1
        pos_hint : {"x" : 0.4, "top" : 0.7}
        color : (1,1,1,1)
        halign : 'center'

<P1>
    Label:
        text : "Username already taken"
        size_hint : 0.2, 0.1
        pos_hint : {"x" : 0.4, "top" : 0.7}
        color : (1,1,1,1)
        halign : 'center'

<P2>
    Label:
        text : "Incorrect Username or Password"
        size_hint : 0.2, 0.1
        pos_hint : {"x" : 0.4, "top" : 0.7}
        color : (1,1,1,1)
        halign : 'center'
